import uigen

ui.shader({
	'name':'alBlackbody',
	'intro':'Generates a Rec709 color from the blackbody spectrum for the given temperature.',
   'description':'Useful for fire, lava, light colors and any self-illuminated object.',
	'output':'rgb',
	'maya_name':'alBlackbody',
	'maya_classification':'texture/other',
	'maya_id':'0x00116404',
	'maya_swatch':True,
	'maya_matte':False,
	'maya_bump':False,
   'c4d_classification':'texture',
   'c4d_menu':'texture',
	'soft_name':'ALS_Blackbody',
	'soft_classification':'texture',
	'soft_version':1,
	'help_url':'http://www.anderslanglands.com/alshaders/alBlackbody.html',
   'houdini_icon':'SHELF_fire'
})

ui.parameter('temperature', 'float', 1000.0, 'Temperature', mn=273, mx=16000, description='The temperature value used to generate the color. From low to high the spectrum goes through red, orange, yellow, white, blue.', fig='alBlackbody_temperature', figc='Temperature at [1000,3000,5000]', mayane=True)
ui.parameter('strength', 'float', 1.0, 'Strength', description='Multiplier on the brightness of the generated color.', fig='alBlackbody_strength', figc='Strength at [1.0,0.5,0.0]', mayane=True)

with uigen.group(ui, 'Advanced', description='The colors generated by the blackbody spectrum are often extremely bright. It is normally useful to preserve this feature since it gives a realistic brightness curve for materials where you\'re mapping the temperature. The controls in this section allow you to modify how that brightness is mapped in case you need to get the final values into less-physical ranges.'):
	ui.parameter('physicalIntensity', 'float', 1.0, 'Physical intensity', description='When set to the default of 1, the full range of physical brightness will be preserved. When set to 0, the generated colors will never be brighter than white. When set to a value in between, the brightness will be lerped between the two.', fig='alBlackbody_physical', figc='Physical intensity at [1.0,0.5,0.0]')
	ui.parameter('physicalExposure', 'float', -20.0, 'Physical exposure', description='An overall exposure value to apply to the color. This is useful to preserve the physical brightness curve but get low-temperature colors into a sensible range.', fig='alBlackbody_exposure', figc='Physical exposure at [-18,-20,-22]')
