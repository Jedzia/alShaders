global proc AEalLayerTemplate(string $n)
{
	editorTemplate -beginScrollLayout;
	AEswatchDisplay $n;
	
	editorTemplate -addControl "layer1";
	editorTemplate -addControl "layer2";
	editorTemplate -addControl "mix";
	
	editorTemplate -addControl "debug";
	
	editorTemplate -addExtraControls;
	
	editorTemplate -endScrollLayout;
	

}
